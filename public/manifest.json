{
  "manifest_version": 3,
  "name": "JSON Builder",
  "version": "1.0",
  "description": "Build and validate nested JSON easily.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png",
    "default_title": "JSON Builder"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  }
}
